properties([disableConcurrentBuilds()])

pipeline {
    agent any 

    triggers { pollSCM('* * * * *') }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        {
        stage("build docker compouse") {
            steps {
                echo " ============== start building compouse =================="
                 sh 'mkdir home/ubuntu/docker-site'
                 sh 'cd home/ubuntu/docker-site'
                 sh 'git clone https://github.com/NazarServer322/site-jenkins.git '                 
                 sh 'docker-compouse build . '
                }
            }
         }
      }
